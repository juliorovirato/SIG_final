<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de información gimnasio</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Navegación de palanca</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><img src="~/images/U.png" alt="Visual Studio" class="img-responsive" /></a>
            </div>
            <div class="navbar-collapse ">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li><a asp-area="" asp-controller="Actividades" asp-action="Index">Actividades</a></li>
                    <li><a asp-area="" asp-controller="Horarios" asp-action="Index">Horarios</a></li>
                    <li><a asp-area="" asp-controller="Tarifas" asp-action="Index">Tarifas</a></li>
                    <li><a asp-area="" asp-controller="Maquinarias" asp-action="Index">Maquinaria</a></li>
                    <li><a asp-area="" asp-controller="Instructores" asp-action="Index">Instructores</a></li>
                    <li><a asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contáctenos</a></li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - Sistema De Información Gimnasio</p>
            <div>
                <ul>
                    <li><a href="/Actividades/">Actividades brindadas por el gimnasio</a></li>
                    <li><a href="/Horarios/">Horarios del gimnasio</a></li>
                    <li><a href="Maquinarias/">Maquinaria del gimnasio</a></li>
                    <li><a href="/Tarifas/">Tarifas del gimnasio</a></li>
                    <li><a href="/Instructores/">Instructores del gimnasio</a></li>
                    <li><a href="/Home/Contact/">Contactos</a></li>
                </ul>
            </div>
            <h6>Iconos realizados por Elegant Themes, monkik, Freepik, Icongeek26 y Smashicons en www.flaticon.com</h6>
        </footer>
    </div>

    <environment include="Production">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/Actividades.js" asp-append-version="true"></script>
        <script src="~/js/Horarios.js" asp-append-version="true"></script>
        <script src="~/js/Maquinarias.js" asp-append-version="true"></script>
        <script src="~/js/Tarifas.js" asp-append-version="true"></script>
        <script src="~/js/Instructores.js" asp-append-version="true"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
